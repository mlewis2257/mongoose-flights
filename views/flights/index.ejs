<%- include('../partials/header') %>

<table id="list">
  <thead>
    <tr>
      <th>Flights</th>
      <br />
      <th>Airlines</th>
      <br />
      <th>Flight No.</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(flight){ %>
    <tr>
      <td><%= flight.airline %> <br /></td>
      <td><%= flight.airport %><br /></td>
      <td><%= flight.flightNo %> <br /></td>
      <td><a href="/flights/<%= flight._id %>">DETAILS</a></td>
    </tr>
    <% }); %>
  </tbody>
</table>

<%- include('../partials/footer') %>
